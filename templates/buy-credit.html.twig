{% extends "mvc-layout.html.twig" %}

{% block content %}

<div class="game21-wrapper">
    <div class="centered-content">
    {% if loggedIn and credit > 0 %}
        <p> User "{{ player }}" has {{ credit }} credits</p>
        {% endif %}
        <form action="{{ app.request.getBaseURL() }}/buy-credit" method="post" class="die-choice">
            <div class="radio-b">
                <div class="radio-duo">
                <input type="radio" id="1" name="credit" value="100">
                <label for="1">100 credits</label><br>
                </div>
                <div class="radio-duo">
                <input type="radio" id="2" name="credit" value="200">
                <label for="2">200 credits</label><br>
                </div>
                <div class="radio-duo">
                <input type="radio" id="3" name="credit" value="300">
                <label for="2">300 credits</label><br>
                </div>
            </div>
            <button type="submit" class="new-game-button" name="buy-credit-button" value="buy">Buy</button>
        </form>
    </div>
</div>

{% endblock %}
