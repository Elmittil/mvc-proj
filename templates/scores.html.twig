{% extends "mvc-layout.html.twig" %}

{% block content %}
<div class="game21-wrapper">
   <div class="centered-content"> 
        <div class="top-score-chart">
            <h3>Plays per game<h3>
            <table class="rounds">
                <tr>
                    <th>Name</th>
                    <th>Score</th>
                </tr>
                {% for score in scoresGame21 %}
                    <tr>
                        <td>{{ score.0 }}</td>
                        <td>{{ score.1 }}</td>
                    </tr>
                {% endfor %}
            </table>
        </div>

        <div class="histo">
        <p>How often do dice roll specific faces?</p>
    
            <div class="six histo-rate">
                <span class="histo-star">
                    <i class="active icon-star"></i>&#9861;</span>
                <span class="bar-block">
                    <span id="bar-six" class="bar" style="width: {{ histogram.5[1] }}%">
                        <span>{{ histogram.5[0] }}</span>&nbsp;
                    </span> 
                </span>
            </div>
            <div class="five histo-rate">
                <span class="histo-star">
                <i class="active icon-star"></i>&#9860;</span>
                <span class="bar-block">
                <span id="bar-five" class="bar" style="width: {{ histogram.4[1] }}%">
                    <span>{{ histogram.4[0] }}</span>&nbsp;
                </span> 
                </span>
            </div>

            <div class="four histo-rate">
